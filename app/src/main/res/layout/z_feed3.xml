<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".z_practice_feed3">

    <ImageView
        android:id="@+id/imageView28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/frameLayout_feed"
        app:layout_constraintStart_toStartOf="@+id/frameLayout_feed"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="1"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView38"
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="닉네임"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView28"
        app:layout_constraintStart_toEndOf="@+id/imageView28"
        app:layout_constraintTop_toTopOf="@+id/imageView28" />

    <FrameLayout
        android:id="@+id/frameLayout_feed"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/textView45"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView28"
        app:layout_constraintVertical_weight="5">

        <ImageView
            android:id="@+id/imageView_feed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="35dp"
            tools:layout_editor_absoluteY="173dp"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageButton
            android:id="@+id/imageButton_feed_like"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="bottom|left"
            app:srcCompat="@android:drawable/btn_star" />

    </FrameLayout>

    <TextView
        android:id="@+id/textView_like"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="n 시간전"
        app:layout_constraintBottom_toTopOf="@+id/button_nickname"
        app:layout_constraintEnd_toEndOf="@+id/textView45"
        app:layout_constraintStart_toStartOf="@+id/textView45"
        app:layout_constraintTop_toBottomOf="@+id/textView45"
        app:layout_constraintVertical_weight="0.5" />

    <Button
        android:id="@+id/button_nickname"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="닉네임"
        app:layout_constraintBottom_toTopOf="@+id/button_comment"
        app:layout_constraintEnd_toStartOf="@+id/textView_nicknamebeside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_like"
        app:layout_constraintVertical_weight="0.5" />

    <TextView
        android:id="@+id/textView_nicknamebeside"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="댓글내용"
        app:layout_constraintBottom_toBottomOf="@+id/button_nickname"
        app:layout_constraintEnd_toEndOf="@+id/frameLayout_feed"
        app:layout_constraintStart_toEndOf="@+id/textView_like"
        app:layout_constraintTop_toTopOf="@+id/button_nickname" />

    <Button
        android:id="@+id/button_comment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="댓글보기"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/button_nickname"
        app:layout_constraintStart_toStartOf="@+id/frameLayout_feed"
        app:layout_constraintTop_toBottomOf="@+id/button_nickname"
        app:layout_constraintVertical_weight="0.5" />

    <TextView
        android:id="@+id/textView45"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="좋아요10개"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textView_like"
        app:layout_constraintStart_toStartOf="@+id/frameLayout_feed"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout_feed"
        app:layout_constraintVertical_weight="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>